<div class="container">
  <h1 class="text-center">{{headerMessage}}</h1>
  <br><br>
  <div class="form-horizontal form-group form-group-lg row">
    <div class="row">
      <div class="col-xs-8" style="float: none; margin: 0 auto;">
        <div class="row">
          {{input type="email" value=emailAddress class="form-control" placeholder="Please type your e-mail address."
          autofocus="autofocus" }}
        </div>
        <br>
        <div class="row">
          {{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7"
          value=textMessage}}
        </div>
      </div>

    </div>
    <br>
    <div class="col-sm-2 col-sm-offset-8">
      <button class="btn btn-primary btn-lg btn-block" disabled={{isValid}} {{action 'sendMessage'}}>Send Message</button>
    </div>
  </div>
  {{#if responseMessage}}
  <div class="alert alert-success">{{responseMessage}}</div>
  {{/if}}

</div>